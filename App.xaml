<?xml version="1.0" encoding="UTF-8"?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuwaiqAsyncImgFilter.App">
    <Application.Resources>
        <Color x:Key="PrimaryColor">#1E1E1E</Color>
        <Color x:Key="AccentColor">#5D5D5D</Color>
        <Color x:Key="SurfaceColor">#F2F2F2</Color>
        <Color x:Key="PanelColor">#F7F7F7</Color>

        <Style TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
        </Style>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource PrimaryColor}" />
            <Setter Property="FontSize" Value="17" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource AccentColor}" />
            <Setter Property="TextColor" Value="#F8F8F8" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="18,12" />
            <Setter Property="HeightRequest" Value="54" />
            <Setter Property="BorderWidth" Value="1.5" />
            <Setter Property="BorderColor" Value="#C7C7C7" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow Brush="#26000000"
                            Radius="8"
                            Offset="0,4" />
                </Setter.Value>
            </Setter>
            <Setter Property="VisualStateManager.VisualStateGroups">
                <Setter.Value>
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="TranslationY" Value="0" />
                                    <Setter Property="Shadow">
                                        <Setter.Value>
                                            <Shadow Brush="#21000000"
                                                    Radius="8"
                                                    Offset="0,4" />
                                        </Setter.Value>
                                    </Setter>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="TranslationY" Value="2" />
                                    <Setter Property="Shadow">
                                        <Setter.Value>
                                            <Shadow Brush="#12000000"
                                                    Radius="4"
                                                    Offset="0,1" />
                                        </Setter.Value>
                                    </Setter>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
